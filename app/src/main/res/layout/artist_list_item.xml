<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/artistImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:alpha="0.4"
        tools:src="@drawable/white_stripes_image" />

    <TextView
        android:id="@+id/artistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/artistNameMarginHorizontal"
        android:layout_above="@id/numberOfAlbums"
        tools:text="@string/white_stripes"
        android:textAppearance="@style/artistNameFont"/>

    <TextView
        android:id="@+id/numberOfAlbums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/artistNameMarginHorizontal"
        android:layout_marginBottom="@dimen/artistNameMarginVertical"
        android:layout_alignBottom="@id/artistImage"
        tools:text="6 Albums"
        android:textAppearance="@style/numberOfAlbumsFont"/>

</RelativeLayout>
